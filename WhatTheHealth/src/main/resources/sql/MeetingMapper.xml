	<!-- SQL : INSERT -->
	<insert 	id="addMeeting"		parameterType="com.wthealth.domain.Meeting" useGeneratedKeys="true" keyProperty="meetNo">
	 	INSERT
		INTO meeting ( meet_no , post_no, depo_amount , depo_bank , depo_account, depo_deadline, depo_acc_holder, entryfee , 
									min_party, max_party, chief_id, depo_condition, meet_time, deadline_time ) 
		VALUES	 (	seq_meeting_meet_no.nextval, 'ME'||seq_meeting_meet_no.currval, #{depoAmount:NUMERIC} , #{depoBank:VARCHAR} , #{depoAccount:VARCHAR} , 
							#{depoDeadline:DATE} , #{depoAccHolder:VARCHAR} , #{entryfee:NUMERIC} , #{minParty:NUMERIC}
							, #{maxParty:NUMERIC}, #{cheifId}, #{depoCondition}, #{meetTime}, #{deadlineTime:DATE})
		<selectKey resultType="int" keyProperty = "meetNo" order="AFTER">
			SELECT seq_meeting_meet_no.currval FROM dual
		</selectKey>
	 </insert>
	 
